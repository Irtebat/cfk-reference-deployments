apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: kafka-client-cert
  namespace: xp
spec:
  secretName: tls-kafka-client  
  duration: 43800h
  renewBefore: 720h
  commonName: kafkaclient
  dnsNames:
    - xp.com
    - kafkaclient
  subject:
    organizations:
      - Confluent
    organizationalUnits:
      - ControlCenter
    countries:
      - IN
    provinces:
      - MH
    localities:
      - Mumbai
  privateKey:
    algorithm: RSA
    size: 2048
  usages:
    - digital signature
    - key encipherment
    - client auth
    - server auth
  issuerRef:
    name: kafka-ca-issuer
    kind: Issuer
